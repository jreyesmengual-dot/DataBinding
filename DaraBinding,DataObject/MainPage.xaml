<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DaraBinding_DataObject.MainPage">

    <Grid
    Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <VerticalStackLayout
        Grid.Row="0"
        Grid.Column="0">

            <Label
        Text="Conteo:"
        FontSize="Medium"/>

            <Border
            Stroke="Gray"
            Margin="0,24,0,36">
                <Label
                Text="{Binding Path=Conteo}"
                HorizontalOptions="Center"
                Margin="0,24"
                FontSize="Large"
                FontAttributes="Bold"
                x:Name="ConteoLabel"/>
            </Border>

            <HorizontalStackLayout
            HorizontalOptions="Center"
            Spacing="32">
                <Button Text="reiniciar"
                        FontSize="Medium"
                        WidthRequest="130"
                        Clicked="OnReniniciarButtonClicked"/>
                <Button Text="contar"
                    FontSize="Medium"
                    WidthRequest="130"
                    Clicked="OnContarButtonClicked"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>

</ContentPage>
